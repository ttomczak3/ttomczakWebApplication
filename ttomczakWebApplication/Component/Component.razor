<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Contact</h4>
                <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
            </div>
            <div class="modal-body">
                <p><a class="text-primary" href="https://github.com/ttomczak3">GitHub</a></p>
                <p><a class="text-primary" href="https://www.linkedin.com/in/tristentomczak/">LinkedIn</a></p>
                <p><a class="text-primary" href="mailto: ttomczak1512@protonmail.com">Email</a></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" @onclick="@ModalOk">Ok</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private Task ModalCancel()
    {
        return OnClose.InvokeAsync(false);
    }

    private Task ModalOk()
    {
        return OnClose.InvokeAsync(true);
    }
}